<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="boolean" name="centered"/>
    <attr format="color" name="selectedColor"/>
    <attr format="dimension" name="strokeWidth"/>
    <attr format="color" name="unselectedColor"/>
    <bool name="default_circle_indicator_centered">true</bool>
    <bool name="default_circle_indicator_snap">false</bool>
    <color name="blue">#3366CC</color>
    <color name="default_circle_indicator_fill_color">#FFFFFFFF</color>
    <color name="default_circle_indicator_page_color">#00000000</color>
    <color name="default_circle_indicator_stroke_color">#FFDDDDDD</color>
    <color name="red">#FF0000</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="anim_circle_indicator_height">30dp</dimen>
    <dimen name="default_circle_indicator_radius">3dp</dimen>
    <dimen name="default_circle_indicator_stroke_width">1dp</dimen>
    <dimen name="page_margin">10dp</dimen>
    <integer name="default_circle_indicator_orientation">0</integer>
    <style name="AnimLineIndicator">
        <item name="ci_width">10dp</item>
        <item name="ci_height">4dp</item>
        <item name="ci_margin">6dp</item>
        <item name="ci_animator">@animator/translation_and_rotate</item>
        <item name="ci_drawable">@drawable/balck_radius_square</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BottomLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="BottomRight">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Center">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="CenterBottom">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="CenterTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="CenterTopLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="CenterTopRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <declare-styleable name="AnimIndicator">
        <attr format="dimension" name="ci_width"/>
        <attr format="dimension" name="ci_height"/>
        <attr format="dimension" name="ci_margin"/>
        <attr format="reference" name="ci_animator"/>
        <attr format="reference" name="ci_drawable"/>
    </declare-styleable>
    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered"/>
        <!-- Color of the filled circle that represents the current page. -->
        <attr format="color" name="fillColor"/>
        <!-- Color of the filled circles that represents pages. -->
        <attr format="color" name="pageColor"/>
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr format="dimension" name="radius"/>
        <!-- Color of the open circles. -->
        <attr format="color" name="strokeColor"/>
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth"/>
        <!-- View background -->
        <attr name="android:background"/>
    </declare-styleable>
    <declare-styleable name="InfiniteIndicator">
     <attr format="enum" name="indicator_type">
         <enum name="indicator_default" value="0"/>
         <enum name="indicator_anim_circle" value="1"/>
         <enum name="indicator_anim_line" value="2"/>
     </attr>
 </declare-styleable>
    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr format="reference" name="vpiCirclePageIndicatorStyle"/>
    </declare-styleable>
</resources>