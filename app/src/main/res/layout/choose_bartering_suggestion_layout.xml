<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="sortByRecyclerView"
            type="com.bartering.forsa.recyclerViewAdapter.SortBy_RecyclerViewAdapter" />

        <variable
            name="categoryRecyclerView"
            type="com.bartering.forsa.recyclerViewAdapter.SortBy_RecyclerViewAdapter" />


    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/size_20">

        <LinearLayout
            android:id="@+id/dialogMainLayoutId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200"
            android:background="@drawable/border_shadow_dialog"
            android:orientation="vertical"
            android:padding="@dimen/size_20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:gravity="center"
                android:text="Choose which of your items you want to suggest for exchange. "
                android:textColor="@color/black"
                android:textSize="@dimen/smallsizeallaround"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/thanksBtnId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_10"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="@string/okthanks"
                android:textColor="@color/white"
                android:textSize="@dimen/smallvaluesizeallaround"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_40"
            android:background="@drawable/down_triangle"
            android:backgroundTint="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dialogMainLayoutId"
            android:layout_marginTop="-13dp"
            ></ImageView>

    </RelativeLayout>
</layout>