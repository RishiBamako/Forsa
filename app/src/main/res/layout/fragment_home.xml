<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_color_green"
        tools:context=".BottomMenuFragment">

        <RelativeLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_above="@+id/bottonMenuLinLayoutId"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottonMenuLinLayoutId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/homeMenuLinLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_04"
                    android:background="@mipmap/home_menu1"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_bm"
                    android:layout_marginTop="4dp"

                    android:textSize="@dimen/size_12"
                    android:textColor="@color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryMenuLinLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_17"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_04"

                    android:background="@mipmap/home_menu2"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_bm"
                    android:layout_marginTop="4dp"

                    android:textSize="@dimen/size_12"
                    android:textColor="@color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/uploadMenuLinLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:paddingBottom="@dimen/size_04"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_bm"
                    android:textSize="@dimen/size_12"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/boostMenuLinLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_22"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_06"
                    android:background="@mipmap/home_menu3"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boost_bm"
                    android:layout_marginTop="3dp"
                   android:textSize="@dimen/size_12"

                    android:textColor="@color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileMenuLinLayoutId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_16"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_04"
                    android:background="@mipmap/home_menu4"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_bm"
                    android:layout_marginTop="5dp"

                    android:textSize="@dimen/size_12"
                    android:textColor="@color/black"></TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/uploadRounLinLayoutId"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70"
            android:background="@drawable/round_linlayout"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_26"
            >
            <ImageView
                android:layout_width="@dimen/size_38"
                android:layout_height="@dimen/size_32"
                android:background="@mipmap/camera_bm"
                ></ImageView>
        </LinearLayout>
    </RelativeLayout>
</layout>