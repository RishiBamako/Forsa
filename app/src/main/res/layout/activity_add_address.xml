<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="com.bartering.forsa.ClickListener" />

        <variable
            name="data"
            type="com.bartering.forsa.mutableViewModel.ParamOptimizer_ViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_color_green"
        tools:context=".BottomMenuFragment">

        <!--recyclerview section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_65"
            android:background="@drawable/border_shadow_home_recycler">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/size_30"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/size_30"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/houseflatblockno"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:text="@={data.houseNoFlatBlockNo}"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/address"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:singleLine="true"
                            android:text="@={data.address}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/landmark"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:singleLine="true"
                            android:text="@={data.landmark}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/city"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:singleLine="true"
                            android:text="@={data.city}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/stateprovience"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:singleLine="true"
                            android:text="@={data.stateProvinceReligion}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/zipotpostalcode"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:singleLine="true"
                            android:text="@={data.zipCodePostalCode}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/size_25"
                            android:fontFamily="arial"
                            android:text="@string/country"
                            android:textColor="@color/hintcolor"
                            android:textSize="@dimen/size_13"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height"
                            android:layout_marginTop="@dimen/size_05"
                            android:background="@drawable/border_shadow_"
                            android:inputType="text"
                            android:paddingLeft="@dimen/size_10"
                            android:singleLine="true"
                            android:text="@={data.country}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textStyle="bold"></EditText>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_marginBottom="@dimen/size_10"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:onClick="@{(view) -> clickListener.onClick(0,null,@string/event2)}"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttontextsize"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_height">

                <LinearLayout
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:onClick="@{(view) -> clickListener.onClick(0,null,@string/event1)}"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/right_arrow_width_normal"
                        android:layout_height="@dimen/right_arrow_height_normal"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow"
                        android:backgroundTint="@color/white"></ImageView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size_25"
                    android:text="@string/addnewaddress"
                    android:textColor="@color/white"
                    android:textSize="@dimen/actionbartextsize"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>